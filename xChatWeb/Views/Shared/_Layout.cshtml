    <script type="text/javascript">
        function Fn_CallMethod(url, data, success, error, complete) {
            $.ajax({
                url: url,
                type: "POST",
                data: data,
                datatype: "json",
                success: success,
                error: error,
                complete: complete,
                cache: false,
                traditional: true
            });
        }
        function Fn_LoadHandlebars(templateId, context) {
            var source = document.getElementById(templateId).innerHTML;
            var template = Handlebars.compile(source);
            return template(context);
        }
    </script>

    <script src="~/Content/handlebars/handlebars-v4.0.12.js"></script>
